{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "formatter.mjs"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**"
      ],
      "outputs": [
        "dist/**",
        "romfs/**"
      ]
    },
    "docs": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "typedoc.json"
      ],
      "outputs": [
        "docs/**"
      ]
    },
    "nro": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**"
      ],
      "outputs": [
        "*.nro"
      ]
    }
  }
}
