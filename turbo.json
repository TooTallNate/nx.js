{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**", "romfs/**"]
    },
    "docs-json": {
      "inputs": ["src/**", "typedoc.json"],
      "outputs": ["docs.json"]
    },
    "nro": {
      "dependsOn": ["build"],
      "inputs": ["src/**"],
      "outputs": ["*.nro"]
    }
  }
}
