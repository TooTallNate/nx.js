{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": [
      "nxjs-runtime"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts"
  ]
}
