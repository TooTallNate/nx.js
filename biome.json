{
  "linter": {
    "enabled": false
  },
  "formatter": {
    "ignore": [
      "romfs",
      "**/*/dist",
      "docs/.next/**",
      "packages/*/docs.json",
      "packages/runtime/runtime.js",
      "packages/runtime/public",
      "packages/nsp/hacbrewpack.cjs"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
