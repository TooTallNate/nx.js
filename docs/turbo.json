{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^docs"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "content/**",
        "app/**",
        "api.template/**"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
